platform :ios, '9.0'
use_frameworks!

inhibit_all_warnings!

target 'PixPic' do

    # Testing and reporting
        pod 'Fabric'
        pod 'Crashlytics'

    # Social networks
        pod 'FBSDKCoreKit'
        pod 'FBSDKLoginKit'
        pod 'FBSDKShareKit'

    # UI
        pod 'Toast'
        pod 'SVPullToRefresh'
        pod 'DateTools'
        pod 'DZNEmptyDataSet'
        pod 'MBProgressHUD'
        pod 'AFDropdownNotification'

    # Parse
        pod 'Parse'
        pod 'ParseFacebookUtilsV4'

    # Utils
        pod 'Kingfisher'
        pod 'XCGLogger'

end
